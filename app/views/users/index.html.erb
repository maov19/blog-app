<div class="container">
  <ul>
    <% @users.each do |user| %>
      <li class="user-list-item">
        <% if user.photo.present? %>
          <div class="user-photo">
            <%= image_tag user.photo %>
          </div>
        <% else %>
          <div class="user-photo">
            <p> No photo</p>
          </div>
        <% end %>
        <div class="user-info">
          <p class="user-name">
            <%= link_to user.name, user_path(user) %>
          </p>
          <p class="user-posts-counter">
            Posts: <%= link_to user.posts_counter, user_posts_path(user) %>
          </p>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="button-container">
    <% if user_signed_in? %>
      <button>
      <%= link_to "New Post", new_post_path, class: 'new-post-button' %>
      </button>
      <%= button_to "Sign Out", destroy_user_session_path, method: :delete, form: { class: 'logout-button-form' }, data: { confirm: 'Are you sure you want to sign out?' }, class: 'logout-button' %>
    <% else %>
      <%= button_to 'Sign In', new_user_session_path, class: 'sign-in-button' %>
    <% end %>
  </div>
</div>
