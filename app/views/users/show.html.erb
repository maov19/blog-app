<div class="container">
    <div class="user-info-container">
        <% if @user.photo.present? %>
            <div class="user-photo">
                <%= image_tag @user.photo %>
            </div>
        <% else %>
            <div class="user-photo">
                <p>No photo</p>
            </div>
        <% end %>
        <div class="user-info">
            <p class='user-name'><%= @user.name %></p>
            <p class='posts-counter'> Number of posts: <%= @user.posts_counter %></p>
        </div>
    </div>
    <div class="user-bio"> 
        <p>Bio</p> 
        <%= @user.bio %>
    </div>
        <% @user.recent_posts.each do |post| %>
        <div class="post-info">
            <p>Post #<%= post.id %></p>
            <p><%= link_to post.text, user_post_path(post.author, post.id) %></p>
            <div class="likes-comments">
                <p>Comments: <%= post.comments_counter %></p>
                <p>Likes: <%= post.likes_counter %></p>
            </div>
    </div>
    <% end %>
        <div class="buttons">
        <%= button_tag(type: 'button', class: 'see-all-posts') do %>
            <%= link_to user_posts_path(@user) do %>
                    See all posts
            <% end %>
        <% end %>

            <button class="back-all-users">  
                <%= link_to 'Back to all users', root_path %>
            </button>
        </div>
</div>

